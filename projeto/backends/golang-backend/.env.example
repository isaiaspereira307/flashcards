# .env.example
# Copie este arquivo para .env e atualize com seus valores

# ====================================
# DATABASE
# ====================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=flashcards_user
DATABASE_PASSWORD=secure_password_here
DATABASE_NAME=flashcards_db
DATABASE_SSL_MODE=disable
DATABASE_MAX_OPEN_CONNS=25
DATABASE_MAX_IDLE_CONNS=5

# ====================================
# SERVER
# ====================================
SERVER_PORT=8001
SERVER_ENVIRONMENT=development  # development, production
SERVER_REQUEST_TIMEOUT=30

# ====================================
# JWT
# ====================================
JWT_SECRET=your-super-secret-key-change-in-production-use-strong-key
JWT_EXPIRATION=3600           # segundos (1 hora)
JWT_REFRESH_EXPIRATION=604800 # segundos (7 dias)

# ====================================
# OPENAI
# ====================================
OPENAI_API_KEY=sk-your-key-here
OPENAI_MODEL=gpt-4

# ====================================
# CORS
# ====================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization
